def __test_switch() {
    assert_eq(
        switch 1 {
            1 => 'one'
            2 => 'two'
            10 => 'ten'
        },
        'one',
    )
    assert_eq(
        switch 10 {
            1 => 'one'
            2 => 'two'
            10 => 'ten'
        },
        'ten',
    )
    assert_eq(
        switch 5 {
            1 => 'one'
            2 => 'two'
            10 => 'ten'
        },
        nil,
    )
    assert_eq(
        switch 5 {
            1 => 'one'
            2 => 'two'
            10 => 'ten'
            => 'other'
        },
        'other',
    )
}

def __test_switch_str() {
    assert_eq(
        switch 'a' {
            'a' => 1
            'b' => 2
        },
        1,
    )
    assert_eq(
        switch 'abc' {
            'a' => 1
            'b' => 2
        },
        nil,
    )
    assert_eq(
        switch 'b' {
            'a' => 1
            'b' => 2
        },
        2,
    )
    assert_eq(
        switch ('a' + 'b') {
            'ab' => 1
            'b' => 2
        },
        1,
    )
}

def __test_comments() {
    s = switch 0 {
        # Foo
        # Some comments
        0 => 'zero'
        => 'other'
    }
    assert_eq(s, 'zero')
}

def __test_multi_option_switches() {
    s = switch 10 {
        1 | 2 => 'one or two'
        9 | 10 => 'nine or ten'
        => 'other'
    }
    assert_eq(s, 'nine or ten')
    s = switch 9 {
        1 | 2 => 'one or two'
        9 | 10 => 'nine or ten'
        => 'other'
    }
    assert_eq(s, 'nine or ten')
    s = switch 1 {
        1 | 2 => 'one or two'
        9 | 10 => 'nine or ten'
        => 'other'
    }
    assert_eq(s, 'one or two')
    s = switch 2 {
        1 | 2 => 'one or two'
        9 | 10 => 'nine or ten'
        => 'other'
    }
    assert_eq(s, 'one or two')
    s = switch 3 {
        1 | 2 => 'one or two'
        9 | 10 => 'nine or ten'
        => 'other'
    }
    assert_eq(s, 'other')

    s = switch 3 {
        1 | 2 | 3 => 'one, two or three'
        9 | 10 => 'nine or ten'
        => 'other'
    }
    assert_eq(s, 'one, two or three')

    s = switch 0 {
        1 | 2 | 3 => 'one, two or three'
        0 => 'zero'
        9 | 10 => 'nine or ten'
        => 'other'
    }
    assert_eq(s, 'zero')
}
